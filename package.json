{
  "name": "spid-smart-button",
  "version": "1.1.0",
  "description": "Pulsante SSO per SPID",
  "engines": {
    "node": ">=8.11.3"
  },
  "localserver": {
    "url": "http://localhost",
    "port": 9090
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/italia/spid-smart-button.git"
  },
  "license": "BSD-3-Clause",
  "author": {
    "name": "Umberto Rosini",
    "email": "rosini@agid.gov.it",
    "url": "https://github.com/umbros"
  },
  "contributors": [
    {
      "name": "Simone Rescio",
      "email": "info@simonerescio.it",
      "url": "https://simonerescio.it"
    },
    {
      "name": "Davide Porrovecchio",
      "email": "davide.porrovecchio@agid.gov.it",
      "url": "https://github.com/pdavide"
    }
  ],
  "scripts": {
    "preinstall": "node tasksConfig/check-node-version.js",
    "security": "grunt retire",
    "start": "grunt build && grunt log-serve && grunt serve & grunt watch ; fg",
    "postinstall": "npm run security; npm start",
    "lint": "grunt lint",
    "test": "grunt test",
    "coverage": "karma start tasksConfig/karma.config.js && grunt log-coverage",
    "performance": "lighthouse $npm_package_localserver_url$npm_package_localserver_port/index.html --output-path=reports/lighthouse.html --view"
  },
  "devDependencies": {
    "axe-core": "^3.0.3",
    "babel-core": "^6.26.3",
    "eslint-config-crockford": "^2.0.0",
    "eslint-plugin-jasmine": "^2.9.1",
    "grunt": "^1.0.1",
    "grunt-babel": "^7.0.0",
    "grunt-contrib-jasmine": "2.0.1",
    "grunt-contrib-uglify": "3.3.0",
    "grunt-contrib-watch": "1.1.0",
    "grunt-eslint": "^21.0.0",
    "grunt-postcss": "^0.9.0",
    "grunt-retire": "^1.0.7",
    "grunt-sass": "^3.0.0",
    "grunt-serve": "git+ssh://git@github.com/srescio/grunt-serve.git#bump-deps-fix-security-warns",
    "grunt-string-replace": "^1.3.1",
    "grunt-stylelint": "^0.10.0",
    "husky": "1.0.0-rc.9",
    "jasmine-core": "^3.1.0",
    "karma": "^2.0.4",
    "karma-chrome-launcher": "^2.2.0",
    "karma-coverage": "^1.1.1",
    "karma-jasmine": "^1.1.2",
    "lighthouse": "^3.0.0",
    "load-grunt-tasks": "^4.0.0",
    "node-sass": "^4.9.0",
    "promise-polyfill": "^8.0.0",
    "stylelint": "^9.3.0",
    "stylelint-config-standard": "^18.2.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint",
      "pre-push": "npm test && npm run coverage"
    }
  }
}